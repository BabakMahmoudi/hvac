<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="hvac_project_list">
      <field name="name">hvac_project_list</field>
      <field name="model">hvac.mrp.project</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>
    <!-- Form View -->
    <record model="ir.ui.view" id="hvac_mrp_project_form">
      <field name="name">sandbox form</field>
      <field name="model">hvac.mrp.project</field>
      <field name="arch" type="xml">
        <form>
          <notebook>
            <page name="MO" string="MO">
              <field name="mf_order" widget="one2many">
                <tree string="Variants" editable="bottom">
                  <field name="name"/>
                  <!-- <field name='product_tmpl_id'/> -->
                  <!-- <field name='MFO_Name'/> -->
                  <!-- <field name ='mf_order'/> -->

                </tree>
              </field>
            </page>
            <page name="Tasks" string="tasks" >
              <field name="task_ids" widget="one2many">
                <tree string="Variants" editable="bottom">
                  <field name="name" />
                  <field name='manufacturing_order'/>
                  <field name="product_id"/>
                </tree>
              </field>


            </page>
          </notebook>
          <field name="name"/>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="hvac_project_action_window">
      <field name="name">hvac_project window</field>
      <field name="res_model">hvac.mrp.project</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="hvac_mrp_project_action_server">
      <field name="name">hvac_project server</field>
      <field name="model_id" ref="model_hvac_mrp_project"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Manufacturing Project" id="hvac_project_menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="hvac_project_menu_1" parent="hvac_project_menu_root"/>
    <menuitem name="Menu 2" id="hvac_project_menu_2" parent="hvac_project_menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="hvac_project_menu_1_list" parent="hvac_project_menu_1" action="hvac_project_action_window"/>
    <!-- <menuitem name="Server to list" id="hvac_project" parent="hvac_project_menu_2" action="hvac_project_action_server"/> -->

  </data>
</odoo>