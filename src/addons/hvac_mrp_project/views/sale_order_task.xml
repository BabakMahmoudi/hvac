<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="sale_order_task_view">
            <field name="name">sale_order_task_view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form//sheet" position="before">
                    <header>
                        <button name="creat_task" string='create task' type='object'/>
                    </header>
                </xpath>
            </field>
        </record>

    </data>
</odoo>